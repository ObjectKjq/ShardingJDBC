<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kdf.shardingjdbc.mapper.UserMapper">

    <insert id="addUser" parameterType="com.kdf.shardingjdbc.model.User">
        INSERT INTO t_user(nickname,PASSWORD,sex,birthday) VALUES(#{nickname},#{password},#{sex},#{birthday})
    </insert>

    <select id="findUsers" resultType="com.kdf.shardingjdbc.model.User">
        SELECT
            id,
            nickname,
            password,
            sex,
            birthday
        FROM t_user;
    </select>

</mapper>